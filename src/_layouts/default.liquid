<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render 'analytics' %}
    {% render 'head', metadata: site.metadata, title: data.title %}
  </head>
  <body class="flex flex-col items-center min-h-screen">
    {% render 'no_script' %}

    {% render 'navbar', metadata: site.metadata, resource: resource %}

    <div class="flex flex-col px-1 sm:px-4 grow">
      <main class="py-8 lg:w-title grow">
        {{ content }}
      </main>

      {% render 'footer', metadata: site.metadata %}
    </div>
  </body>
</html>
